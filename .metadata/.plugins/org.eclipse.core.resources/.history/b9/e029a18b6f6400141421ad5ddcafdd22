package project5;

/**
 * @author Margo Theobald <mtheobal@skidmore.edu>
 *
 */
public class Staff {
	private String name;
	private Guest[] guestList;
	private int guestIndex;
	private String program;
	
	public Staff (String staffName, String program){
		this.setName(staffName);
		this.program = program;
		this.guestList = new Guest [10];
		guestIndex = 0;
	}

	public void add (Guest g){
		System.out.println ("adding guest");
		if (guestIndex >= guestList.length){
			System.out.println ("adding guest to an array larger than current size");
			Guest temp[] = new Guest [guestList.length + 10];
			for (int i=0; i < guestList.length; i++){
				temp[i]=guestList[i];
			}
			temp[guestIndex]=g;
			guestList=temp;
			guestIndex++;		
		}
		else {
			System.out.println ("adding guest to list");
			guestList[guestIndex]=g;
			guestIndex++;
		}
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public String getProgram() {
		return this.program;
	}
	private String printGuestList(){
		String s = "";
		for (int i = 0; i < guestIndex; i++){
			String g = guestList[i].getName() + " " + guestList[i].getEmail() + "\n";
			s += g;
					}
		return s;
	}
	public String toString(){
		return guestIndex + name + "\n" + program + "\n" + printGuestList();
	}
}
