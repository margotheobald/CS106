package project5;

import java.util.Date;

import org.omg.CORBA.Request;

/**
 * @author Margo
 *
 */
public class Guest {
	/*
	 * Define instance variables
	 */
	private String name;
	private String email;
	private String hotel;
	private String arrival;
	private String departure;
	private String program;

	/**
	 * Create a constructor to make a guest object
	 */

	public Guest(String theName, String theEmail, String theHotel,
			String theArrival, String theDeparture,
			String theProgram) {
	
		this.name = theName;
		this.email = theEmail;
		this.hotel = theHotel;
		this.arrival = theArrival;
		this.departure = theDeparture;
		this.program = theProgram;
	}

	/*
	 * accessors for instance variables
	 */
	
	/* citing source: http://stackoverflow.com/questions/13037654/subtract-two-dates-in-java
	 * 
	 */
