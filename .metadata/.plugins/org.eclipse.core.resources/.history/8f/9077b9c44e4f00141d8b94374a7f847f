			/**
			 * If next token is Opening, ignore Balance, add next double
			 * If next token is Withdrawal, subtract next double
			 * If next token is Deposit, add next double
			 */
				if (fileReader.hasNext("Opening")){
				fileReader.next();
				fileReader.next();
				// add to total of double checking
				checking += fileReader.nextDouble();
				}
				else if (fileReader.hasNext("Withdrawal")){
					fileReader.next();
					checking -= fileReader.nextDouble();
				}
				else if (fileReader.hasNext("Deposit")){
					fileReader.next();
					checking += fileReader.nextDouble();
				}
				
				/*else if next() = "Withdrawal"
