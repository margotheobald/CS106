package project1;

/**
 * @author Margo
 *
 */
public class calculator {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// Declare variables 
		double P = 25000;
		double r = 0.0499;
		int t = 4;
		double A;
		
		// Compute amount of money paid back on a car loan over time at a specified rate
		
		// Compound interest formula, 12 = number of payments per year
		
		A = P * Math.pow((1 + (r/12)), 12*t);
		
		System.out.println("Total amount of loan:");
		System.out.println(A);
	}

}
